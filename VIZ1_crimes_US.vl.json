{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Crimes in USA",
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Avyav/FIT3179/main/states-10m.json",
        "format": {"type": "topojson", "feature": "states"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Avyav/FIT3179/main/REAL_crime%20in%20context_2015_only.csv"
      },
      "layer":[{
      "mark": {"type": "circle", 
      "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "tooltip": [
          {"field": "agency_jurisdiction", "type": "ordinal", "title": "City"},
          {
            "field": "Crimes Per Capita",
            "type": "quantitative",
            "title": "Crimes per capita"
          },
          {"field": "population", "type": "quantitative", "title": "Population"}
        ],
        "size": {
          "field": "Crimes Per Capita", 
          "type": "quantitative",
          "scale": {"domain": [100, 1000]}},
        "color": {
          "field": "Crimes Per Capita",
          "type": "quantitative",
          "scale": {
            "scheme": "goldred",
            "domain": [100, 1000]}
        }
      }
    },
    {
      "mark": {
      "type": "text",
      "align": "center",
      "baseline": "middle",
      "angle": -13,
      "dx": 10,
      "dy": -17,
      "fontSize": 11.5,
      "fontStyle": "italic"
      },
      "encoding": {
      "text": {"field": "agency_jurisdiction", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {
      "condition": {
 "test": "datum['agency_jurisdiction'] == 'Detroit' || datum['agency_jurisdiction'] == 'Milwaukee'",
        "value": 1
        },
        "value": 0},
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
 }},
     {
      "mark": {
      "type": "text",
      "align": "center",
      "baseline": "middle",
      "angle": -13,
      "dx": 0,
      "dy": 17,
      "fontSize": 11.5,
      "fontStyle": "italic"
      },
      "encoding": {
      "text": {"field": "agency_jurisdiction", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {
      "condition": {
 "test": "datum['agency_jurisdiction'] == 'Miami' || datum['agency_jurisdiction'] == 'Memphis'|| datum['agency_jurisdiction'] == 'Salt Lake City'|| datum['agency_jurisdiction'] == 'Houston'",
        "value": 1
        },
        "value": 0},
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
 }},
 {
      "mark": {
      "type": "text",
      "align": "center",
      "baseline": "middle",
      "angle": -13,
      "dx": 25,
      "dy": -13,
      "fontSize": 11.5,
      "fontStyle": "italic"
      },
      "encoding": {
      "text": {"field": "agency_jurisdiction", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {
      "condition": {
 "test": "datum['agency_jurisdiction'] == 'Oakland'",
        "value": 1
        },
        "value": 0},
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
 }}
  ]}]
}
