{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Avyav/FIT3179/main/VIS7_data.csv"
  },
  "title": "St. Louis 1975 - 2015",
  "mark": "area",
  "encoding": {
    "tooltip": [
      {"field": "agency_jurisdiction", "type": "ordinal", "title": "City"},
      {"field": "Type", "type": "ordinal", "title": "Crime type"},
      {"field": "report_year", "type": "temporal", "title": "Year"},
      {"field": "Amount", "type": "quantitative", "title": "Amount"}
    ],
    "x": {"field": "report_year", "type": "temporal"},
    "y": {
      "aggregate": "sum",
      "field": "Amount",
      "axis": null,
      "stack": "center"
    },
    "color": {"field": "Type", "scale": {"scheme": "plasma"}}
  },
  "config": {}
}