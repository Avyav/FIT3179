{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 450,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Avyav/FIT3179/main/Data_for_stacked_barchart.csv"
  },
  "title": "Comparison of Crime in US Cities in 1975 - 2015",

 "params": [ {
    "name": "Year_Selection",
     "bind": {
      "input": "select",
      "options": [
        "1975",
        "1985",
        "1995",
        "2005",
        "2015"
      ],
      "labels":[
        "Show All",
        "1975",
        "1985",
        "1995",
        "2005",
        "2015"
],
      "name": "Year_Selection: "
    }
} ],
"transform": [ {"filter": "Year_Selection == null || datum.Year == Year_Selection"}],
  "mark": "bar",
  "encoding": {
    "tooltip": [
      {"field": "City", "type": "ordinal", "title": "City"},
      {"field": "Type", "type": "ordinal", "title": "Crime type"},
      {"field": "Amount", "type": "quantitative", "title": "Amount in 2015"}
    ],
    "x": {"field": "City", "title": "30 highest crime US cities"},
    "y": {
      "aggregate": "sum",
      "field": "Amount",
      "stack": "normalize",
      "title": "Type of Crime"
    },
    "color": {
      "field": "Type",
      "scale": {"range": ["#5C17A6", 
                "#FDB32F",
                "#ED7953",
                "#CB4779"]}
    }
  },
  "config": {}
}
